<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <com.android.d.parttimejob.MyView.RoundImageView
        android:id="@+id/friend_head_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/friend_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friend_head_img"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/friend_head_img"
        android:layout_toRightOf="@+id/friend_head_img"
        android:background="@drawable/chat_friend_bg"
        android:padding="8dp"
        android:text="你在哪里呀我在这里" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_below="@+id/friend_message" />
</RelativeLayout>