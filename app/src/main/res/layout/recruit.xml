<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.android.d.parttimejob.MyView.RoundImageView
            android:id="@+id/id_usr_head_image_info"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="兼职"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/locationImg"
            android:layout_toStartOf="@+id/locationImg"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:text="南京"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/locationImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/location" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_margin"
        android:background="@color/space" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:background="@drawable/press_bg"
            android:id="@+id/id_select_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="距离"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.01"
            android:background="@color/space" />

        <View
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.01"
            android:background="@color/space" />

        <RelativeLayout
            android:background="@drawable/press_bg"
            android:id="@+id/id_select_salary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="薪资"
                android:textSize="14sp" />


        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.01"
            android:background="@color/space" />

        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center"-->
        <!--android:text="筛选"-->
        <!--android:textSize="14sp" />-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_margin"
        android:background="@color/space" />

    <ListView
        android:id="@+id/id_infoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
